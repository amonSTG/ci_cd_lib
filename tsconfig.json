{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "lib": [
      "ESNext"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitThis": true,
    "outDir": "dist/",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}